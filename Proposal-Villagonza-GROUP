<script type="text/javascript">
	function billing(){
	var name = document.Form1.name.value;
	var address = document.Form1.add.value;
	var date1 = document.Form1.date1.value;
	var date2 = document.Form1.date1.value;
	var contact = document.Form1.contact.value
	var preading = parseInt(document.Form1.previous.value);
	var creading = parseInt(document.Form1.current.value);
	var cons;
	var total, after, duedate;

	cons = creading - preading;
	total = cons * 8.90;
	after = total + 10;
	duedate = date1 + 10;

	document.Form2.vname.value = name;
	document.Form2.vadd.value = address;
	document.Form2.vdate1.value = date1;
	document.Form2.vdate2.value = date1;
	document.Form2.contact.value = contact;
	document.Form2.vcreading.value = creading;
	document.Form2.vpreading.value = preading;
	document.Form2.consumption.value = cons;
	document.Form2.AD.value = total;
	document.Form2.ad.value = after;





}
</script>
